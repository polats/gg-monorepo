{
  "name": "@bazaar-x402/core",
  "version": "0.1.0",
  "private": true,
  "description": "Core types, interfaces, and utilities for Bazaar x402 marketplace",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.8"
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.4"
  }
}

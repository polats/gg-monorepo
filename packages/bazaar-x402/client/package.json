{
  "name": "@bazaar-x402/client",
  "version": "0.1.0",
  "private": true,
  "description": "Client SDK for Bazaar x402 marketplace with wallet integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --external @bazaar-x402/core",
    "dev": "tsup src/index.ts --format cjs,esm --dts --external @bazaar-x402/core --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@bazaar-x402/core": "workspace:*"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.95.0",
    "@solana/wallet-adapter-base": "^0.9.0"
  },
  "peerDependenciesMeta": {
    "@solana/web3.js": {
      "optional": true
    },
    "@solana/wallet-adapter-base": {
      "optional": true
    }
  },
  "devDependencies": {
    "@solana/web3.js": "^1.95.0",
    "@solana/wallet-adapter-base": "^0.9.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.2",
    "vitest": "^2.1.8"
  }
}

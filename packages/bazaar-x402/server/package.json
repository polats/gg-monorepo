{
  "name": "@bazaar-x402/server",
  "version": "0.1.0",
  "private": true,
  "description": "Server SDK for Bazaar x402 marketplace with x402 payment integration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./express": {
      "types": "./dist/express.d.ts",
      "import": "./dist/express.mjs",
      "require": "./dist/express.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/express.ts --format cjs,esm --dts --external @bazaar-x402/core",
    "dev": "tsup src/index.ts src/express.ts --format cjs,esm --dts --external @bazaar-x402/core --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@bazaar-x402/core": "workspace:*"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "@solana/web3.js": "^1.95.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "@solana/web3.js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/supertest": "^6.0.2",
    "@solana/web3.js": "^1.95.0",
    "express": "^5.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.2",
    "vitest": "^4.0.8"
  }
}

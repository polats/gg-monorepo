{
  "private": true,
  "name": "goblin-gardens",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "build:client": "cd src/client && vite build",
    "build:server": "cd src/server && vite build",
    "build": "npm run build:client && npm run build:server",
    "check": "npm run type-check && npm run lint:fix && npm run prettier",
    "deploy": "npm run build && devvit upload",
    "dev:reddit": "concurrently -k -p \"[{name}]\" -n \"CLIENT,SERVER,DEVVIT\" -c \"blue,green,magenta\" \"npm run dev:client\" \"npm run dev:server\" \"npm run dev:devvit\"",
    "dev:client": "cd src/client && vite build --watch",
    "dev:client:serve": "cd src/client && vite --host",
    "dev:devvit": "dotenv -e .env -- devvit playtest",
    "dev:local": "concurrently -k -p \"[{name}]\" -n \"CLIENT,API\" -c \"blue,green\" \"npm run dev:client:serve\" \"npm run dev:server:local\"",
    "dev:server": "cd src/server && vite build --watch",
    "dev:server:local": "tsx src/server/local.ts",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login",
    "launch": "npm run build && npm run deploy && devvit publish",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@devvit/web": "0.12.1",
    "@react-three/csg": "3.3.0",
    "@react-three/drei": "10.0.1",
    "@react-three/fiber": "9.0.4",
    "@react-three/postprocessing": "^3.0.4",
    "@react-three/rapier": "2.1.0",
    "@react-three/rapier-addons": "5.0.0",
    "@types/three": "0.172.0",
    "@use-gesture/react": "^10.3.1",
    "cors": "^2.8.5",
    "detect-gpu": "^5.0.70",
    "devvit": "0.12.1",
    "express": "5.1.0",
    "leva": "0.10.0",
    "postprocessing": "^6.37.8",
    "r3f-perf": "7.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "7.1.3",
    "seedrandom": "^3.0.5",
    "three": "0.178.0"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@types/cors": "^2.8.19",
    "@types/express": "5.0.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/seedrandom": "^3.0.8",
    "@types/three": "0.137.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "9.1.2",
    "dotenv-cli": "8.0.0",
    "eslint": "9.23.0",
    "globals": "15.15.0",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "three-stdlib": "^2.36.0",
    "tsx": "^4.20.6",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "6.2.4",
    "vitest": "3.1.1"
  }
}
